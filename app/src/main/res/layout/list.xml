<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/horizontal_padding"
        android:layout_marginBottom="@dimen/horizontal_padding"
        app:civ_border_color="#8e8e8e"
        app:civ_border_overlay="true" />

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/image"
        android:paddingTop="@dimen/vertical_padding"
        android:layout_toRightOf="@+id/image"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Tile"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtJudul"
        android:layout_alignStart="@+id/txtJudul"
        android:layout_below="@+id/txtJudul"
        android:layout_toRightOf="@+id/image"
        android:ellipsize="end"
        android:lines="2"
        android:paddingBottom="@dimen/horizontal_padding"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:text="Tile"
        android:textAppearance="?android:textAppearanceSmall" />
</RelativeLayout>